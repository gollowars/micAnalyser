@import '_normalize'
@import '_reset'
@import '_common'

body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

#canvas
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  

#startBtn
  position: absolute
  width: 200px
  height: 200px 
  left: 50%
  top: 50%
  margin: -100px 0 0 -100px
  text-align: center
  line-height: 200px
  font-family: 'futura'
  background-color: #fff
  border-radius: 50% 
  font-size: 1.8em
  transition: all .4s ease
  letter-spacing: .1em
  color: #000
  cursor: pointer
  border: solid 4px #eee

#startBtn:hover
  color: #000
  background-color: yellow
  border: solid 4px transparent